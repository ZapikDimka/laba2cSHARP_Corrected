<Window x:Class="WpfApp1.BirthdayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Happy Birthday!" Height="100" Width="200">
	<!-- Root Grid for layout -->
	<Grid>
		<!-- Define two columns in the grid -->
		<Grid.ColumnDefinitions>
			<!-- First column takes all available space -->
			<ColumnDefinition Width="*" />
			<!-- Second column has zero width -->
			<ColumnDefinition Width="0*" />
		</Grid.ColumnDefinitions>

		<!-- Display 'Happy Birthday!' text -->
		<TextBlock Text="Happy Birthday!"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="20" FontWeight="Bold" />
	</Grid>
</Window>
